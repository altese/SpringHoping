<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springlec.base.dao.ClientMainDao">

	<select id="listRegCampview" resultType="com.springlec.base.model.regcampDto">
		select * from camping.regcamp
	</select>

	<select id="searchRegCamp" resultType="com.springlec.base.model.regcampDto">
		select * from camping.regcamp where ${query} like #{content}
	</select>

	<select id="dateCheck" resultType="com.springlec.base.model.regcampDto">
		select distinct * from checkDate2 where roNum not in ( select distinct roNum from checkDate2 where boCheckindate between #{startdate} and #{stopdate}
	</select>

	<select id="detailView" resultType="com.springlec.base.model.regcampDto">
		select * from camping.regcamp where regSeq = #{regSeq}
	</select>
	
	<select id="reviewList" resultType="com.springlec.base.model.reviewDto">
		select * from review, camping.regcamp where regcamp_regSeq = regcamp.regseq and regSeq=#{regSeq}
	</select>
</mapper>